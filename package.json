{
  "name": "fees-manager-backend",
  "version": "1.0.0",
  "description": "Production backend service for multi-tenant Fees Manager with WhatsApp automation",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "npx nodemon src/server.js",
    "dev:scheduler": "npx nodemon src/scheduler.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:health": "jest tests/health.test.js",
    "test:auth": "jest tests/auth.test.js",
    "test:organizations": "jest tests/organizations.test.js",
    "test:students": "jest tests/students.test.js",
    "test:users": "jest tests/users.test.js",
    "test:integration": "jest tests/integration.test.js",
    "test:api": "jest tests/*.test.js --verbose",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup": "node scripts/setup.js",
    "deploy": "bash scripts/deploy.sh",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "backend",
    "multi-tenant",
    "automation",
    "whatsapp",
    "wppconnect",
    "fees-manager",
    "express",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.0",
    "helmet": "^7.1.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "2.6.7",
    "redis": "^4.6.10",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
